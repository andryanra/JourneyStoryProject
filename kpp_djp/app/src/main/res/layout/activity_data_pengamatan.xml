            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KLU"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <Spinner
                        android:id="@+id/sp_klu"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kegiatan Usaha"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <EditText
                        android:id="@+id/kegiatan_usaha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:hint="(Cth:Restaurant, Bengkel, Hotel dsb)"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Usaha"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <EditText
                        android:id="@+id/merk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:hint="(Cth:MCD, Margo Hotel dsb)"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Situasi Objek"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <Spinner
                        android:id="@+id/sp_situasi"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Karyawan"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <Spinner
                        android:id="@+id/sp_jumlah_karyawan"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perkiraan Omzet"
                        android:textColor="@color/hitam"
                        android:textSize="13dp"/>
                    <Spinner
                        android:id="@+id/sp_omzet"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/putih"
        android:background="@color/colorPrimary"/>

</LinearLayout>